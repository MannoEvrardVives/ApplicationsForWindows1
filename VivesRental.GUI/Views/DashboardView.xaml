<UserControl x:Class="VivesRental.GUI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VivesRental.GUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Content="Open Users Management" Command="{Binding OpenUsersManagementCommand}" Grid.Column="0" Margin="30"/>
        <Button Content="Open Items Management" Command="{Binding OpenItemsManagementCommand}" Grid.Column="1" Margin="30" />
        <Button Content="Open Rental Management" Command="{Binding OpenRentalManagementCommand}" Grid.Column="2" Margin="30" />
    </Grid>
</UserControl>
